{
    "name": "gearsdigital/kirby-reporter",
    "description": "Report issues with ease.",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Steffen Giers",
            "email": "steffen.giers@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "KirbyReporter\\": "lib/"
        }
    },
    "require": {
        "ql/uri-template": "^1.1",
        "guzzlehttp/guzzle": "~6.0",
        "ext-json": "*"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "spatie/phpunit-watcher": "dev-master"
    }
}
